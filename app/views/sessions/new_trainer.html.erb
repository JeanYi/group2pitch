<h1>Please sign in</h1>

<%= form_tag sessions_trainer_path do %>
<%= text_field_tag :email, nil, placeholder: "input trainer email" %>
<%= password_field_tag :password , nil, placeholder: "input password"%>
<%= submit_tag "Sign In"%>

<%end%>

<% if current_trainer %>
    <%= button_to "Sign Out", sign_out_trainer_path, method: :delete, data: {confirm: "Are you sure?"} %>
<% end %> 
