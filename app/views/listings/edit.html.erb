<h3>Edit Listing</h3>

<%= form_for @listing , url:listing_path do |f| %>

	<p>
		<%=f.label "workshop name" %><br>
		<%=f.text_field :name %>		
	</p>

	<p>
		<%=f.label "short desc" %><br>
		<%=f.text_field :short_desc %>		
	</p>

	<p>
		<%=f.label "long desc" %><br>
		<%=f.text_field :long_desc %>		
	</p>

	<p>
		<%=f.label "start date" %><br>
		<%=f.date_field :start_date %>		
	</p>

	<p>
		<%=f.label "end date" %><br>
		<%=f.date_field :end_date %>		
	</p>

	<%= f.submit %>

<% end %>