<h2>Learn more about our programmes</h2>
<div class="container">
<div class="row">
    <% @static_listing.each do |l| %>
        <div class="col-sm-4">
            <div class="card mb-3">
                <% if l.image.present? %>
                <%= image_tag l.image.url, class: "card-img-top", style: "height: 250px;" %>
                <% else %>
                <%= image_tag "UK.jpg", style:"width:100px" %>
                <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= l.title %></h5>
                <p class="card-text"><%= l.description.truncate(450) %></p>
<!--                 <p class="card-text">Date: <%= l.duration %></p> -->
                <%=link_to "Learn more", static_listing_path(l), class: "btn btn-primary" %>
              </div>
            </div>
        </div>
    <% end %>
<div class="paginate-pages"><%= paginate @static_listing %> </div>
</div>
</div>


