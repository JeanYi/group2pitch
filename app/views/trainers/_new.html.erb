<!DOCTYPE html>
<html>
<style> 

</style>
<body>

<div id="id01" class="modal">
  <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
  
  <%= form_for Trainer.new, html: {class: "modal-content"} do |form| %>
    <div class="container">
      <h1>Sign Up</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>


        <%= form.label :first_name %>
        <%= form.text_field :first_name, type: 'text' %> 

        <%= form.label :last_name %>
        <%= form.text_field :last_name, type: 'text' %> 

        <%= form.label :email %>
        <%= form.text_field :email, type: 'text' %>  

        <%= form.label :password %>
        <%= form.text_field :password, type: 'text' %> 

       <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>. </p>

      <%= form.submit :"Sign Up" , class: "signupbtn" %> 

    </div>
  <% end %> 
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

</body>
</html>



