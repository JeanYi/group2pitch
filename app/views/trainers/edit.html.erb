<h1>Edit Your Profile </h1>

<%= form_for @trainer do |f| %>

 <%= f.label :first_name %>:
 <%= f.text_field :first_name %><br />

 <%= f.label :last_name %>:'
 <%= f.text_field :last_name %><br />

 <%= f.label :email %>
 <%= f.text_field :email %><br />

 <%= f.label :phone_number %>
 <%= f.text_field :phone_number %><br />

 <%= f.label :password %>
  <%= f.text_field :password %><br />

  <%= f.label :skills %>
  <%= f.text_area :skills %><br />

  <%= f.label :prior_experience %>
  <%= f.text_area :prior_experience %><br />

  <%= f.label :birthday %>
  <%= f.date_field :birthday %></br>

  <%= f.label :rate_per_day %>
  <%= f.text_field :rate_per_day %></br>

 <%= f.submit %>

<%= button_to 'Delete', trainer_path, method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>